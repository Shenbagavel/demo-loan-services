package com.shen.demo.services.loan.repository;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.dao.IncorrectResultSizeDataAccessException;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import com.shen.demo.services.loan.model.LoanAcc;

@Repository
public class JdbcLoanRepository implements LoanAccRepository {

  @Autowired
  private JdbcTemplate jdbcTemplate;

  @Override
  public int save(LoanAcc loanAccModel) {
    return jdbcTemplate.update("INSERT INTO loan_Acc (title, description, published) VALUES(?,?,?)",
        new Object[] { loanAccModel.getTitle(), loanAccModel.getDescription(), loanAccModel.isPublished() });
  }

  

  @Override
  public LoanAcc findById(Long id) {
    try {
      LoanAcc loanAccModel = jdbcTemplate.queryForObject("SELECT * FROM tutorials WHERE id=?",
          BeanPropertyRowMapper.newInstance(LoanAcc.class), id);

      return loanAccModel;
    } catch (IncorrectResultSizeDataAccessException e) {
      return null;
    }
  }

  
  @Override
  public List<LoanAcc> findAll() {
    return jdbcTemplate.query("SELECT * from loan_Acc", BeanPropertyRowMapper.newInstance(LoanAcc.class));
  }
 
}
